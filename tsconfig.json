  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts","test/**/*.ts"],
}
